<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    >

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

    <ImageView
        android:id="@+id/list_item_thumbnail_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:drawable/picture_frame"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        />

    <TextView
        android:id="@+id/list_item_catalog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        tools:text="name"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/list_item_catalog_type"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="4dp"
          android:layout_marginLeft="4dp"
          tools:text="type"
          android:textSize="14sp"
          android:textStyle="italic"
          />

      <TextView
          android:id="@+id/list_item_catalog_constellation"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:layout_marginLeft="4dp"
          android:layout_marginRight="4dp"
          tools:text="con"
          android:textSize="12sp"
          />

      <TextView
          android:id="@+id/list_item_catalog_ngc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:layout_marginLeft="4dp"
          android:layout_marginRight="4dp"
          tools:text="ngc"
          android:textSize="12sp"
          />

      <TextView
          android:id="@+id/list_item_catalog_distance"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:layout_marginLeft="4dp"
          android:layout_marginRight="4dp"
          tools:text="dist"
          android:textSize="12sp"
          />
    </LinearLayout>

  </LinearLayout>

</android.support.v7.widget.CardView>
